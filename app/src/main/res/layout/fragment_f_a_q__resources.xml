<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQ_Resources">

    <!-- Header background (Fixed at top) -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="#0F000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:shadowDx="6"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="U-PLAN"
        android:textColor="#d22031"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/UT_Spartans_wordmark" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_bar_background"
        android:hint="Search questions or resources..."
        android:textColorHint="#777777"
        android:textColor="#333333"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bg" />

    <!-- FAQ SECTION CONTAINER -->
    <TextView
        android:id="@+id/faq_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Frequently Asked Questions"
        android:textColor="#d22031"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />

    <View
        android:id="@+id/faq_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="#686666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faq_title_label" />

    <ScrollView
        android:id="@+id/faq_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/section_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faq_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp">

            <!-- FAQ Item 1 -->
            <LinearLayout
                android:id="@+id/faq_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/faq_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I schedule an appointment?"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/faq_arrow_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/faq_content_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="You can schedule an appointment through the main dashboard by clicking the 'Schedule' button and selecting an available time slot."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 2 -->
            <LinearLayout
                android:id="@+id/faq_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/faq_header_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Where can I find my student ID?"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/faq_arrow_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/faq_content_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="Your student ID is located on your physical Spartan Card or can be viewed in the 'Student Profile' section of this app."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 3 -->
            <LinearLayout
                android:id="@+id/faq_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/faq_header_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I change my major?"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/faq_arrow_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/faq_content_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="To change your major, you must meet with your current academic advisor to complete the necessary paperwork and obtain approval."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Visual Separator -->
    <View
        android:id="@+id/section_separator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@+id/guideline_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="426dp" />

    <!-- RESOURCES SECTION CONTAINER -->
    <TextView
        android:id="@+id/resources_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resources"
        android:textColor="#d22031"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_middle" />

    <View
        android:id="@+id/resources_divider_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="#686666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_title_label" />

    <ScrollView
        android:id="@+id/res_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_divider_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="32dp">

            <!-- Resource Item 1 -->
            <LinearLayout
                android:id="@+id/res_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/res_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Campus Health Center"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/res_arrow_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/res_content_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="The Health Center provides primary care, immunizations, and wellness education. Located near the North Residence Hall."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Resource Item 2 -->
            <LinearLayout
                android:id="@+id/res_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/res_header_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Career Services"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/res_arrow_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/res_content_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="Offers resume help, internship searches, and interview prep. Find them in the Student Center, 2nd floor."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Resource Item 3 -->
            <LinearLayout
                android:id="@+id/res_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/faq_item_background"
                android:orientation="vertical"
                android:padding="2dp">
                <LinearLayout
                    android:id="@+id/res_header_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Spartan Support"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/res_arrow_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#666666" />
                </LinearLayout>
                <TextView
                    android:id="@+id/res_content_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="12dp"
                    android:text="Provides counseling, financial aid assistance, and academic tutoring resources for all students."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>