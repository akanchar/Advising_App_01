<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <!-- Header Section -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="#D52F3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/header_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_bg"
        app:srcCompat="@drawable/UT_Spartans_wordmark" />

    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U-PLAN"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:shadowColor="#40000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintBottom_toBottomOf="@id/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_bg" />

    <!-- Bottom Navigation Section -->
    <View
        android:id="@+id/bottom_nav_bg"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#d22031"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Container for Buttons -->
    <LinearLayout
        android:id="@+id/nav_buttons_container"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_flowchart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_advisor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_help"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_faq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_info_details"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Account Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/center_button_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#800000"
        app:cardElevation="12dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_nav_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerInside"
            android:padding="16dp"
            app:tint="@color/white" />
    </com.google.android.material.card.MaterialCardView>

</merge>