<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Template Skeleton -->
    <include layout="@layout/skeleton" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_vertical_margin"
        android:text="@string/math_major_flowchart_title"
        android:textAlignment="center"
        android:textColor="@color/brand_red"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bg" />

    <!-- Flowchart Scrollable Container -->
    <ScrollView
        android:id="@+id/verticalScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/legendContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSubtitle">

        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/math_major_flowchart_title">

            <ImageView
                android:id="@+id/imageViewFlowchart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/math_major_flowchart_title"
                app:srcCompat="@drawable/mathclas"
                tools:layout_height="500dp"
                tools:layout_width="800dp" />
        </HorizontalScrollView>
    </ScrollView>

    <!-- Legend Section -->
    <LinearLayout
        android:id="@+id/legendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/fragment_horizontal_margin"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fragment_horizontal_margin"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="@string/legend_completed"
            android:textSize="@dimen/text_size_small_caption"
            app:drawableStartCompat="@android:drawable/presence_online" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fragment_horizontal_margin"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="@string/legend_in_progress"
            android:textSize="@dimen/text_size_small_caption"
            app:drawableStartCompat="@android:drawable/presence_away" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="@string/legend_required"
            android:textSize="@dimen/text_size_small_caption"
            app:drawableStartCompat="@android:drawable/presence_invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
