<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_large"
        android:background="@color/semi_transparent_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="@dimen/image_view_icon_width"
        android:layout_height="@dimen/image_view_icon_height"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:contentDescription="@string/university_logo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/UT_Spartans_wordmark" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/black"
        android:shadowDx="6"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/u_plan_title"
        android:textColor="@color/brand_red"
        android:textSize="@dimen/text_size_display"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/header_background"
        app:layout_constraintStart_toStartOf="@id/header_background"
        app:layout_constraintEnd_toEndOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="@+id/header_background" />

</androidx.constraintlayout.widget.ConstraintLayout>